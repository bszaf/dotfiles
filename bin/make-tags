#!/bin/sh

[ -z "$WHERE" ] && WHERE="apps deps include* src* test*"
[ -z "$CTAGS" ] && CTAGS=ctags

[ -f tags ] && rm tags
find ${WHERE} \
    -name .git -prune -o \
    -name '*.erl' -print -o \
    -name '*.hrl' -print -o \
    -name '*.ex' -print -o \
    -name '*.exs' -print -o \
    -name '*.c' -print -o \
    -name '*.h' -print \
    | ${CTAGS} -L-
